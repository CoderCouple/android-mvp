<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <CheckBox
        android:id="@+id/chk_active"
        android:layout_width="@dimen/task_list_item_button_width"
        android:layout_height="@dimen/task_list_item_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center"/>

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/task_list_item_height"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/chk_active"
        android:layout_toLeftOf="@+id/btn_delete"
        android:layout_toRightOf="@+id/chk_active"
        android:layout_toStartOf="@+id/btn_delete"
        android:gravity="center_vertical"
        android:padding="@dimen/spacing_small"
        android:text="Task Title"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="@dimen/task_list_item_button_width"
        android:layout_height="@dimen/task_list_item_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/task_delete_btn_bg"
        android:gravity="center"
        android:text="X"
        android:textColor="@color/gray40"/>
</RelativeLayout>